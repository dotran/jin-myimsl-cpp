# Miscellaneous variables set by configure.

CC_FLAGS_DEMOS	= -c -O -Wall -I$(INCLUDE_DIRF) -I.

# This is intentionally NOT set.

PLLIBS		=

# These are what we link against.

PLLIB_LDC	= -L$(LIB_DIRF) -l$(PLLIB_NAME)$(LIB_TAG)
PLLIB_LDF	= -L$(LIB_DIRF) -l$(PLLIB_NAME)$(LIB_TAG)

# Default is to build every demo program.

everything: cdemos fdemos tkdemos

# Clear the suffix list to prevent problems.

.SUFFIXES:
.SUFFIXES: $O .cc .c .f .h

# Inference rules.

.c$O:
	$(CC) $(CC_FLAGS_DEMOS) $*.c

.f$O:
#	$(F77) $(F77_FLAGS) $*.f
	f2c -A $*.f
	$(CC) $(CC_FLAGS_DEMOS) $*.c
	del $*.c

